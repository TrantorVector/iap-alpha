FROM node:20-slim

WORKDIR /app

# Copy package files
COPY package.json package-lock.json ./

# Install dependencies using npm ci for clean/reproducible install
RUN npm ci

# Copy source code
COPY . .

# Expose port (Vite default)
EXPOSE 3000

# Start server with host flag for external access
CMD ["npm", "run", "dev", "--", "--host"]
